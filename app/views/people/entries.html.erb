<div class="mx-auto w-full">
<h1 class="font-bold text-4xl pb-5 text-center"><%= @person.display_name %></h1>

<div class="mx-auto w-full mb-8 text-center">
<div>Role: <%= @person.role %></div>
<div>Category: <%= @person.category %></div>
<div>Level: <%= @person.level %></div>
</div>

<div class="mx-auto w-full flex flex-wrap">
<%= form_with(class: "contents") do |form| %>

<div class="mx-auto flex flex-wrap">

<h1 class="w-full text-center bg-yellow-400 mb-4">CLOSED CATEGORY</h1>

<div class="mx-auto">
  <h2 class="italic text-lg font-bold">American Style</h2>
  <% [
    'Waltz',
    'Tango',
    'Foxtrot',
    'Vienese Waltz',
    'Cha Cha',
    'Rumba',
    'Swing',
    'Bolero',
    'Hustle',
    'Samba',
    'Merengue',
   ].each do |dance| %>
    <% field = "closed_american_#{dance.downcase.gsub(' ', '_')}" %>
    <div class="my-5">
      <%= form.text_field field, class: "entry-count" %>
      <%= form.label field, dance %>
    </div>
  <% end %>

  <h2 class="italic text-lg font-bold">International Style</h2>
  <% [
    'Waltz',
    'Tango',
    'Vienese Waltz',
    'Foxtrot',
    'Quickstep',
    'Cha Cha',
    'Samba',
    'Rumba',
    'Paso Doble',
    'Jive',
   ].each do |dance| %>
    <% field = "closed_international_#{dance.downcase.gsub(' ', '_')}" %>
    <div class="my-5">
      <%= form.text_field field, class: "entry-count" %>
      <%= form.label field, dance %>
    </div>
  <% end %>
<% end %>
</div>

<div class="mx-auto">
<%= form_with(class: "contents") do |form| %>
  <h2 class="italic text-lg font-bold">Country Western</h2>
