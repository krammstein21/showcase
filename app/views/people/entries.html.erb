<div class="mx-auto w-full">
<h1 class="font-bold text-4xl pb-5 text-center"><%= @person.display_name %></h1>

<%= form_with(url: "entries", class: "contents") do |form| %>

<div class="mx-auto w-full mb-8 text-center">
<div><%= form.select :partner, @avail, {},
  class: "mx-auto block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-64" %></div>
<div><%= form.select :age, @ages, {selected: @person.age_id},
  class: "mx-auto block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-64" %></div>
<div><%= form.select :level, @levels, {selected: @person.level_id},
  class: "mx-auto block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-64" %></div>

</div>

<div class="mx-auto w-full flex flex-wrap">
  <div class="mx-auto flex flex-wrap">
    <h1 class="w-full text-center bg-yellow-400 mb-4">CLOSED CATEGORY</h1>

    <div class="grid grid-cols-4 gap-4">
      <% @dances.each do |dance| %>
	<% field = "entries[Closed][#{dance}]" %>
	<div class="my-5">
	  <%= form.text_field field, class: "entry-count" %>
	  <%= form.label field, dance %>
	</div>
      <% end %>
    </div>
  </div>
</div>

<div class="mx-auto w-full flex flex-wrap">
  <div class="mx-auto flex flex-wrap">
    <h1 class="w-full text-center bg-yellow-400 mb-4">OPEN CATEGORY</h1>

    <div class="grid grid-cols-4 gap-4">
      <% @dances.each do |dance| %>
	<% field = "entries[Open][#{dance}]" %>
	<div class="my-5">
	  <%= form.text_field field, class: "entry-count" %>
	  <%= form.label field, dance %>
	</div>
      <% end %>
    </div>
  </div>
</div>

<div class="mx-auto w-full flex">
  <div class="mx-auto">
  <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
</div>
<% end %>
