    'Two Step',
    'Swing',
    'Cha Cha',
    'Three Step',
    'Shuffle',
    'Waltz',
   ].each do |dance| %>
    <% field = "closed_country_#{dance.downcase.gsub(' ', '_')}" %>
    <div class="my-5">
      <%= form.text_field field, class: "entry-count" %>
      <%= form.label field, "C/W #{dance}", class: 'normal-case' %>
    </div>
  <% end %>

  <h2 class="italic text-lg font-bold mt-20">Specialty Dances</h2>
