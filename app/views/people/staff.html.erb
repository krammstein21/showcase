<div class="w-screen">
  <table class="mx-auto">
  <thead>
  <tr>
    <th colspan="3" class="font-bold pt-8 text-3xl pb-5" >Professionals</td>
  </tr>
  <tr>
    <th class="row-head">Name
    <th class="row-head">Studio
    <th class="row-head">Back #
  </tr>
  </thead>
  <tbody>
  <% @professionals.each do |person| %>
    <tr>
      <td><div class="mx-4"><%= person.name %>
      <td><div class="mx-4"><%= person.studio.name %>
      <td><div class="mx-4" align="right"><%= person.back %>
    </tr>
  <% end %>
  </tbody>
  </table>

  <% if @organizers %>
  <table class="mx-auto" style="break-after: page">
  <thead>
  <tr>
    <th colspan="1" class="font-bold pt-8 text-3xl pb-5" >Organizers</td>
  </tr>
  <tr>
    <th class="row-head">Name
  </tr>
  </thead>
  <tbody>
  <% @organizers.each do |person| %>
    <tr>
      <td><div class="mx-4"><%= person.name %>
    </tr>
  <% end %>
  </tbody>
  </table>
  <% end %>
</div>