<!DOCTYPE html>
<html>
  <head>
    <title>Showcase</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= action_cable_meta_tag_dynamic %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <style>
    @page {
      margin: 0;
      padding: 0;
      size: 4in 3.7in;
    }
    </style>
  </head>

  <body>

    <% @people.each do |person| %>
    <div class="break-inside-avoid grid grid-cols-1 text-center" style="min-width: 4in; max-width: 4in">
    <%= image_tag showcase_logo, class: "mx-auto my-4 w-28" %>
    <div>
    <div class="text-xl"><%= @event.name %></div>
    <div><%= @event.date %></div>
    </div>
    <div class="my-6">
    <div class="text-4xl"><%= person.display_name %></div>
    <div class="text-2xl"><%= person.studio&.name%></div>
    </div>
    </div>
    <% end %>

  </body>
</html>
