<% content_for :tabs do %>

<%
tabs = %w(Description Options Scoring Staff Prices Heats Advanced)
@tab ||= tabs.first
%>

<div class="mx-auto flex text-sm font-medium text-center text-gray-500 dark:text-gray-400 dark:border-gray-700">
  <ul class="flex flex-wrap -mb-px mx-auto text-center">
    <% tabs.each do | tab| %>
    <li class="me-2">
      <% if tab == @tab %>
      <a href="?tab=<%= tab %>" class="inline-block p-4 text-blue-600 border-b-2 border-blue-600 rounded-t-lg active dark:text-blue-500 dark:border-blue-500" aria-current="page"><%= tab %></a>
      <% else %>
      <a href="?tab=<%= tab %>" class="inline-block p-4 border-gray-200 rounded-t-lg hover:border-b-2 hover:text-gray-600 hover:border-gray-300 dark:hover:text-gray-300"><%= tab %></a>
      <% end %>
    </li>
    <% end %>
  </ul>
</div>

<% end %>

<%= render template: "layouts/application" %>