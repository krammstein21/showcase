<div class="mx-auto md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">Editing <%= @type %></h1>

  <%= render "form", billable: @billable %>

<div class="mx-auto grid grid-cols-2">
  <button type="submit" class="btn-blue" form="billable-form">Update package</button>

  <% if @type == 'package' %>
  <%= link_to "Select people", people_billable_path(@billable), class: 'btn-green' %>
  <% end %>

  <%= link_to "Remove #{@type}", billable_path(@billable), class: 'btn-grey',
    data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %>
  <%= link_to "Back to settings", settings_event_index_path(tab: 'Prices'),
    class: "btn-grey" %>
</div>
</div>
