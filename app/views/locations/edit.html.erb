<div class="mx-auto md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">Editing location</h1>

  <%= render "form", location: @location %>

  <div class="mx-auto flex">
  <input type="submit" form="location-form" value="Update Location"
    class="rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer">
  <%= up_link 'Remove this location', location_path(@location), class: 'btn-orange my-0',
      method: :delete, form: {data: { turbo_confirm: 'Are you sure?' }} %>
  <%= link_to "Back to locations", locations_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>

  <h1 class="mt-8 font-bold text-4xl">Showcases</h1>

  <% @showcases.each do |year, showcases| %>
  <a href="<%= "#{@scope}/#{year}".squeeze('/') %>/">
    <h2 class="font-bold text-2xl mt-4 mb-2"><%= year %></h2>
  </a>

  <ul class="mt-2 list-disc list-inside">
    <% showcases.each do |showcase| %>
    <li>
      <span class="text-xl"><%= link_to showcase.name, edit_showcase_path(showcase) %><span>
    </li>
    <% end %>
  </ul>
<% end %>
</div>
