<div class="mx-auto md:w-2/3 w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <h1 class="font-bold text-4xl">Editing location</h1>

  <%= render "form", location: @location %>

  <div class="mx-auto flex">
  <div class="mt-8 grid grid-cols-3 gap-1">
  <%= link_to "events", events_location_path, class: 'btn-green' %>
  <%= link_to "auth", auth_location_path, class: 'btn-blue' %>
  <%= link_to "sisters", sisters_location_path, class: 'btn-green' %>

  <input type="submit" form="location-form" value="Update Location" class="btn-blue">
  <%= up_link 'Remove this location', location_path(@location), class: 'btn-orange',
      method: :delete, form: {data: { turbo_confirm: 'Are you sure?' }} %>
  <%= link_to "Back to locations", locations_path, class: "btn-grey" %>
  </div>
  </div>
</div>
