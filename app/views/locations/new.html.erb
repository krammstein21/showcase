<div class="mx-auto md:w-2/3 w-full">
  <% if @first_event %>
  <h1 class="font-bold text-4xl text-center">First Event</h1>
  <% else %>
  <h1 class="font-bold text-4xl">New Studio</h1>
  <% end %>

  <%= render "form", location: @location %>

  <div class="mx-auto flex">
    <input type="submit" class="rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" form="location-form" value="Create Studio">
    <%= link_to "Back to Locations", locations_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>
