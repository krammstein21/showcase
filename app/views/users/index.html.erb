<div class="mx-auto" id="users">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <h1 class="text-center font-bold text-4xl mb-8">Users</h1>

  <div class="min-w-full">
  <table class="mx-auto table-fixed">
    <thead>
      <tr>
        <th class="row-head">Userid
        <th class="row-head">Name
      </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
      <tr>
        <td class="row text-black font-medium"><%= link_to user.userid, edit_user_path(user) %></td>
        <td class="row"><%= user.name1 %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

<div class="mt-4 grid grid-cols-2 justify-between items-center">
  <%= up_link 'New user', new_user_path, class: "btn-blue" %>
  <%= link_to 'Back to Index', root_path, class: "btn-green" %>
</div>
</div>