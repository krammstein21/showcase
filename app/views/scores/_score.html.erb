<div id="<%= dom_id score %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Judge:</strong>
    <%= score.judge_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Heat:</strong>
    <%= score.heat_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Value:</strong>
    <%= score.value %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this score", score, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this score', edit_score_path(score), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
