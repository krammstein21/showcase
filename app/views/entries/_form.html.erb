<%= form_with(model: entry, class: "contents", data: {controller: "check-number"}) do |form| %>
  <% if entry.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(entry.errors.count, "error") %> prohibited this entry from being saved:</h2>

      <ul>
        <% entry.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class="mx-auto w-full mb-8 text-center">
<%= render partial: 'entries/box', locals: {form: form} %>

<div class="mx-auto w-full flex flex-wrap">
  <div class="mx-auto flex flex-wrap">
    <h2 class="w-full text-center bg-yellow-400 mb-4">CLOSED CATEGORY</h1>

    <div class="grid grid-cols-2 lg:grid-cols-4 gap-4">
      <% @dances.each do |dance| %>
	<% field = "entries[Closed][#{dance}]" %>
	<div class="my-5 flex flex-row">
	  <% value = @entries['Closed'][dance]&.length || 0 %>
          <% if value <= 1 %>
          <%= form.check_box field, class: "entry-count h-10", checked: value > 0 %>
          <% else %>
	  <%= form.text_field field, class: "entry-count", value: value %>
          <% end %>
	  <%= form.label field, dance, class: 'mt-2 flex items-center justify-center' %>
	</div>
      <% end %>
    </div>
  </div>
</div>

<div class="mx-auto w-full flex flex-wrap">
  <div class="mx-auto flex flex-wrap">
    <h2 class="w-full text-center bg-yellow-400 mb-4">OPEN CATEGORY</h1>

    <div class="grid grid-cols-2 lg:grid-cols-4 gap-4">
      <% @dances.each do |dance| %>
	<% field = "entries[Open][#{dance}]" %>
	<div class="my-5 flex flex-row">
	  <% value = @entries['Open'][dance]&.length || 0 %>
          <% if value <= 1 %>
          <%= form.check_box field, class: "entry-count h-10", checked: value > 0 %>
          <% else %>
	  <%= form.text_field field, class: "entry-count", value: value %>
          <% end %>
	  <%= form.label field, dance, class: 'mt-2 flex items-center justify-center' %>
	</div>
      <% end %>
    </div>
  </div>
</div>

<div class="mx-auto flex">
  <div class="mx-auto">
  <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  <% if entry.id %>
  <%= link_to 'Remove this entry', entry_path(entry, primary: @person), class: 'btn-grey',
    data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %>
  <% end %>
  <%= link_to 'Back to student', @person, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>
<% end %>
