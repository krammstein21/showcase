<div class="mx-auto md:w-2/3 w-full">
  <h1 class="text-center font-bold text-4xl">Import Database</h1>

  <%= form_tag({action: :import}, multipart: true, class: 'text-center') do %>
  <div class="my-4">
    <%= file_field_tag 'file', required: true %>
  </div>

  <div class="mx-auto">
    <%= submit_tag "Import Database", class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
    <%= link_to 'Back to Event List', root_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
  <% end %>
</div>