<%= raw begin

  workbook = FastExcel.open(constant_memory: true)
  bold = workbook.bold_format

  #***************************************************************************
  #                              Participants
  #***************************************************************************

  worksheet = workbook.add_worksheet("Participants")
  worksheet.auto_width = true

  headers = [
    'Name',
    'Type',
    'Role',
    'Back #',
    'Level',
    'Age',
    'Studio',
  ]

  worksheet.append_row(headers, bold)

  @people.each do |person|
    worksheet.append_row [
      person.name,
      person.type,
      person.role,
      person.back,
      person.level&.name,
      person.age&.category,
      person.studio&.name
    ]
  end

  #***************************************************************************
  #                                 Heats
  #***************************************************************************

  worksheet = workbook.add_worksheet("Heats")
  worksheet.auto_width = true

  headers = [
    'Number',
    'Student',
    'Open or Closed',
    'Dance',
    'Back #',
    'Lead',
    'Follow',
    'Level',
    'Category',
    'Studio',
  ]

  worksheet.append_row(headers, bold)

  @heats.each do |heat|
    worksheet.append_row [
      heat.number,
      heat.entry.subject.name,
      heat.category,
      heat.dance.name,
      heat.entry.lead.back,
      heat.entry.lead.name,
      heat.entry.follow.name,
      heat.entry.level.name,
      heat.entry.subject_category,
      heat.entry.subject.studio.name,
    ]
  end

  #***************************************************************************

  workbook.read_string

end %>
