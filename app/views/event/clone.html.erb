<div class="mx-auto md:w-2/3 w-full">

<h1 class="font-bold text-4xl mb-6">Clone</h1>

<p class="text-red-600 text-xl"><strong>Warning</strong>: cloning data from another database will
overwrite data you may have already entered in this database.</p>

<%= form_with url: clone_event_index_path, data: {turbo: false} do |form| %>

  <div class="my-5">
    <%= form.label :source %>
    <%= form.select :source, @sources, {},
      class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <% %i(settings dances agenda packages studios people ages levels).each do |model| %>
  <div class="my-5">
    <%= form.check_box model, class: 'entry-count h-8', checked: true %>
    <%= form.label model, class: 'text-xl align-middle pt-2' %>
  </div>
  <% end %>

  <div class="inline">
    <%= form.submit value: 'Clone', class: "rounded-lg py-3 px-5 bg-red-600 text-white inline-block font-medium cursor-pointer" %>
  </div>  
<% end %>

</div>
