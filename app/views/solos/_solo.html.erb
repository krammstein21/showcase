<div id="<%= dom_id solo %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Heat:</strong>
    <%= solo.heat_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Combo dance:</strong>
    <%= solo.combo_dance_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Order:</strong>
    <%= solo.order %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this solo", solo, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this solo', edit_solo_path(solo), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
