<div id="<%= dom_id multi %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Parent:</strong>
    <%= multi.parent_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Dance:</strong>
    <%= multi.dance_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this multi", multi, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this multi', edit_multi_path(multi), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
