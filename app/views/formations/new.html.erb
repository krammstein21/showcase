<div class="mx-auto md:w-2/3 w-full">
  <%= render "info_box" %>

  <div class="relative">
  <% if @studio && @person&.id == 0%>
  <h1 class="text-center font-bold text-4xl"><%= @studio.name %> <%= @formation ? 'Formation' : 'Solo' %></h1>
  <% elsif @person %>
  <h1 class="text-center font-bold text-4xl"><%= @person.display_name %></h1>
  <% else %>
  <h1 class="text-center font-bold text-4xl">New <%= @formation ? 'Formation' : 'Solo' %></h1>
  <% end %>

  <%= render "solos/form", solo: @solo, return_to: nil %>
  </div>
</div>