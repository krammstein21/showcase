<div class="mx-auto md:w-2/3 w-full">
  <% if @person %>
  <h1 class="text-center font-bold text-4xl"><%= @person.display_name %></h1>
  <% else %>
  <h1 class="text-center font-bold text-4xl">New Heat</h1>
  <% end %>

  <%= render "form", heat: @heat %>

  <%= link_to 'Back to heats', heats_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
</div>
