<%= form_with(model: heat, class: "contents") do |form| %>
  <% if heat.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(heat.errors.count, "error") %> prohibited this heat from being saved:</h2>

      <ul>
        <% heat.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mx-auto w-full mb-8 text-center">
  <%= form.hidden_field :primary, value: @person.id %>
  
  <div>
  <%= form.select :partner, @avail, {selected: @partner},
    class: "mx-auto block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-64" %></div>
  <div><%= form.select :age, @ages, {selected: @age},
    class: "mx-auto block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-64" %></div>
  <div><%= form.select :level, @levels, {selected: @level},
    class: "mx-auto block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-64" %></div>
  </div>

    
  <div class="my-5">
    <%= form.label :category %>
    <%= form.select :category, %w(Open Closed), {},
      class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

    <div class="my-5">
      <%= form.label :dance_id %>
      <%= form.select :dance_id, @dances, {},
        class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
    </div>

  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
