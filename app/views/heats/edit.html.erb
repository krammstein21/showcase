<div class="mx-auto md:w-2/3 w-full">
  <% if @person %>
  <h1 class="text-center font-bold text-4xl"><%= @person.display_name %></h1>
  <% else %>
  <h1 class="text-center font-bold text-4xl">Edit Heat</h1>
  <% end %>

  <%= render "form", heat: @heat %>

  <% if @heat.number < 0 %>
  <%= up_link 'Restore this heat', heat_path(@heat), class: 'btn-grey',
    method: :delete, params: {primary: params[:primary]} %>
  <% elsif @heat.number > 0 %>
  <%= up_link 'Scratch this heat', heat_path(@heat), class: 'btn-grey',
    method: :delete, params: {primary: params[:primary]} %>
  <% else %>
  <%= up_link 'Remove this heat', heat_path(@heat), class: 'btn-grey',
    method: :delete, params: {primary: params[:primary]}, data: { turbo_confirm: 'Are you sure?' } %>
  <% end %>

  <% if @person %>
  <%= link_to "Back to student", person_path(@person), class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  <% end %>
</div>
